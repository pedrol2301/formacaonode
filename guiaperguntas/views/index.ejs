<%- include ("partials/header.ejs")%>
<body>
    <%- include ("partials/navbar.ejs")%>
    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <br>
        <a href="/perguntar" class="btn btn-dark">Fazer pergunta</a>
        <hr>
        <br>
        <br>
        <% perguntas.forEach(pergunta =>{ %>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %> </h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%=pergunta.id%>" class="btn btn-dark">Responder</a>
                </div>
            </div>
            <br>
       <% }); %> 
    </div>
</body>
<%- include ("partials/footer.ejs")%>