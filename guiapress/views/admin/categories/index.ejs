<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navbar.ejs") %>
<body>
    <div class="container">
        <h2>Categorias</h2>
        <a href="/admin/categories/new" class="btn btn-dark">Nova Categoria</a>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Titulo
                    </th>
                    <th>
                        Slug
                    </th>
                    <th>
                        Ações
                    </th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach((category) =>{%>
                    <tr>
                        <td>
                            <%=category.id%>
                        </td>
                        <td>
                            <%=category.title%>
                        </td>
                        <td>
                            <%=category.slug%>
                        </td>
                        <td>
                            <a href="/admin/categories/edit/<%=category.id%>" class="btn btn-warning">Editar</a>
                            <form action="/categories/delete" method="post" style="display: inline;" onsubmit="confirma(event)">
                                <input type="hidden" name="id" value="<%= category.id %> ">
                                <button type="submit" class="btn btn-danger">Deletar</button>
                            </form>
                        </th>
                    </tr>
                <%});%> 
            </tbody>
        </table>
    </div>
</body>
