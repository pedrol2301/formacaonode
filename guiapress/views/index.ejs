<%- include('partials/header.ejs') %> 
<%- include('partials/homenavbar.ejs') %> 
<body>
    <div class="container">
        <div class="jumbotron">
                <h1 class="display-4">Bem vindo</h1>
                <p class="lead">Blog da Seção 7 curso formação Node.JS</p>
                <hr class="my-4">
                <p>Blog para postagem de artigos.</p>
          </div>
          <hr>
        <% articles.forEach(article =>{%>
            <div class="card">
                <div class="card-header">
                    <%= article.title %> 
                </div>
                <div class="card-body">
                    <a href="/<%=article.id%>" class="btn btn-dark">Ler artigo</a>
                </div>
            </div>
            <br>
        <%}) %> 
        <div class="row">
            <div class="col col-12">
                <a class="btn btn-primary" href="/articles/page/2" style="float: right;">Next ></a>
            </div>
        </div>
        <hr>
    </div>
</body>
<%-include('partials/footer.ejs') %>